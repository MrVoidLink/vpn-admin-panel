{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/admin/:match*", "destination": "/" },
    { "source": "/:match*", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
